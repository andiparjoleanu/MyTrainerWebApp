@model IEnumerable<MyTrainer.ViewModels.BilateralExercisesHistoryVM>

@{
    ViewData["Title"] = "SearchUserBilateralHistory";
}

<div class="container">
    <table class="table text-white mt-5 mt-md-0 text-center">
        <thead>
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Repetări stânga
                </th>
                <th>
                    Repetări dreapta
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeftSideReps)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RightSideReps)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

